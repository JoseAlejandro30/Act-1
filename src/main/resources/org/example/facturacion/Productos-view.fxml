<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.facturacion.Controllers.ProductoController">
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <children>
                <!-- Título -->
                <Label text="Registro de Productos" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Formulario -->
                <GridPane alignment="CENTER" hgap="15.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
                    </columnConstraints>

                    <!-- Selección de Cliente -->
                    <Label text="Cliente:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="cmbClientes" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <!-- ID del Producto -->
                    <Label text="ID Producto:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtID" prefWidth="250.0" promptText="Ingrese el ID del producto" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <!-- Descripción -->
                    <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtDescription" prefWidth="250.0" promptText="Descripción del producto" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <!-- Precio -->
                    <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtPrice" prefWidth="250.0" promptText="0.00" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <!-- Stock -->
                    <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="txtStock" prefWidth="250.0" promptText="Cantidad en stock" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                    <!-- Tipo de Impuesto -->
                    <Label text="Impuesto:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <VBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
                        <children>
                            <RadioButton fx:id="rbtnWithTaxIVA" text="Con IVA (19%)" />
                            <RadioButton fx:id="rbtnWithoutTax" text="Exento de Impuesto" />
                        </children>
                    </VBox>
                </GridPane>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnGuardar" prefWidth="120.0" text="Guardar">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnBack" prefWidth="120.0" text="Volver">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <!-- Instrucciones -->
                <Label text="Nota: Primero debe registrar al menos un cliente antes de crear productos" textFill="#666666" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
