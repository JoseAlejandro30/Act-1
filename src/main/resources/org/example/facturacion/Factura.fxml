<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.facturacion.Controllers.FacturaController">
    <top>
        <VBox spacing="10.0">
            <children>
                <!-- Título -->
                <Label text="Sistema de Facturación" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Sección de búsqueda -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Buscar Cliente:" />
                        <TextField fx:id="txtBuscar" prefWidth="200.0" promptText="ID o Nombre del cliente" />
                        <Button fx:id="btnBuscar" text="Buscar" />
                        <Button fx:id="btnLimpiar" text="Limpiar" />
                    </children>
                </HBox>

                <!-- Label para mostrar cliente seleccionado -->
                <Label fx:id="lblClienteSeleccionado" text="Ningún cliente seleccionado" textFill="#0066cc">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <HBox spacing="10.0">
            <children>
                <!-- Panel izquierdo - Clientes -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Clientes Registrados">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <TableView fx:id="clientesTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="colClienteId" prefWidth="80.0" text="ID" />
                                <TableColumn fx:id="colClienteNombre" prefWidth="150.0" text="Nombre" />
                                <TableColumn fx:id="colClienteEmail" prefWidth="150.0" text="Email" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

                <!-- Panel derecho - Productos del cliente seleccionado -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Productos del Cliente">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>

                        <TableView fx:id="productosTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="colProdId" prefWidth="60.0" text="ID" />
                                <TableColumn fx:id="colProdDesc" prefWidth="120.0" text="Descripción" />
                                <TableColumn fx:id="colProdPrecio" prefWidth="80.0" text="Precio" />
                                <TableColumn fx:id="colProdStock" prefWidth="60.0" text="Stock" />
                                <TableColumn fx:id="colProdImpuesto" prefWidth="80.0" text="Impuesto" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <Label text="Doble clic en un producto para agregarlo a la factura" textFill="#666666">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </center>

    <bottom>
        <VBox spacing="10.0">
            <children>
                <!-- Total de la factura -->
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label fx:id="lblTotal" text="Total: $0.00" textFill="#009900">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <!-- Botones de acción -->
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="btnNuevaFactura" text="Nueva Factura" prefWidth="120.0" />
                        <Button fx:id="btnGuardarFactura" text="Guardar Factura" prefWidth="120.0" />
                        <Button fx:id="btnImprimir" text="Imprimir" prefWidth="120.0" />
                        <Button fx:id="btnVolverMenu" text="Volver al Menú" prefWidth="120.0" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>